<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.quang.appordercoffeestaff.check.CheckActivity">
    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:id="@+id/empty"
        android:textColor="#f000"
        android:textSize="24sp"
        android:text="Table : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txtName_Table"
        android:layout_marginStart="35dp"
        android:text="Table 1"
        android:textStyle="bold"
        android:textColor="#f000"
        android:textSize="20sp"
        android:layout_marginTop="24dp"
        android:layout_toRightOf="@+id/empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@id/empty"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/empty1"
        android:textColor="#f000"
        android:textSize="24sp"
        android:text="Total : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@+id/txtName_Table"
        android:id="@+id/txtTotal"
        android:layout_marginStart="35dp"
        android:text="Total"
        android:textStyle="bold"
        android:textColor="#f000"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ListView
        android:layout_marginTop="10dp"
        android:id="@+id/lv_CheckRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnCheckRequest"
        android:layout_below="@+id/txtTotal" />
    <Button
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="#147817"
        android:layout_alignParentBottom="true"
        android:text="Accept"
        android:id="@+id/btnCheckRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
